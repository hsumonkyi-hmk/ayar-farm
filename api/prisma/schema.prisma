generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  FARMER
  AGRICULTURAL_SPECIALIST
  AGRICULTURAL_EQUIPMENT_SHOP
  TRADER_VENDOR
  LIVESTOCK_BREEDER
  LIVESTOCK_SPECIALIST
  OTHERS
}

enum Category {
  CROPS_AND_PULSES
  LIVESTOCK_INDUSTRY
  FISHERY
  AGRI_INDUSTRY
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum ResourceType {
  ARTICLE
  AGROMET_BULLETIN
  VIDEO
  APPLICATION
}

model Users {
  id           String   @id @unique @default(uuid())
  name         String
  phone_number String   @unique
  email        String?  @unique
  password     String
  gender       Gender   @default(OTHER)
  user_type    UserType @default(OTHERS)

  profile_picture String?
  location        String?

  isVerified                 Boolean   @default(false)
  verificationToken          String?
  verificationTokenExpiresAt DateTime?
  resetPasswordToken         String?
  resetPasswordExpiresAt     DateTime?

  last_login DateTime @default(now())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model CropTypes {
  id          String   @id @unique @default(uuid())
  name        String
  description String?
  image_urls  String[]
  category    Category @default(CROPS_AND_PULSES)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  crops     Crops[]     @relation("CropTypeToCrops")
  documents Documents[] @relation("CropTypeToDocuments")
}

model LivestockTypes {
  id          String   @id @unique @default(uuid())
  name        String
  description String?
  image_urls  String[]
  category    Category @default(LIVESTOCK_INDUSTRY)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  livestocks Livestocks[] @relation("LivestockTypeToLivestock")
  documents  Documents[]  @relation("LivestockTypeToDocuments")
}

model MachineTypes {
  id          String   @id @unique @default(uuid())
  name        String
  description String?
  image_urls  String[]
  category    Category @default(AGRI_INDUSTRY)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  machines  Machines[]  @relation("MachineTypeToMachines")
  documents Documents[] @relation("MachineTypeToDocuments")
}

model Crops {
  id           String   @id @unique @default(uuid())
  crop_type_id String
  name         String
  description  String?
  image_urls   String[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  documents Documents[] @relation("CropToDocuments")

  CropTypes CropTypes? @relation("CropTypeToCrops", fields: [crop_type_id], references: [id])

  @@index([crop_type_id])
}

model Livestocks {
  id                String   @id @unique @default(uuid())
  livestock_type_id String
  name              String
  description       String?
  image_urls        String[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  documents Documents[] @relation("LivestockToDocuments")

  LivestockTypes LivestockTypes? @relation("LivestockTypeToLivestock", fields: [livestock_type_id], references: [id])

  @@index([livestock_type_id])
}

model Machines {
  id              String   @id @unique @default(uuid())
  machine_type_id String
  name            String
  description     String?
  image_urls      String[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  documents Documents[] @relation("MachineToDocuments")

  MachineTypes MachineTypes? @relation("MachineTypeToMachines", fields: [machine_type_id], references: [id])

  @@index([machine_type_id])
}

model Fishs {
  id          String   @id @unique @default(uuid())
  name        String
  description String?
  image_urls  String[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  documents Documents[] @relation("FishToDocuments")
}

model Documents {
  id        String   @id @unique @default(uuid())
  title     String
  author    String
  file_urls String[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  crop_type_id      String?
  livestock_type_id String?
  machine_type_id   String?
  crop_id           String?
  livestock_id      String?
  machine_id        String?
  fish_id           String?

  CropTypes      CropTypes?      @relation("CropTypeToDocuments", fields: [crop_type_id], references: [id])
  LivestockTypes LivestockTypes? @relation("LivestockTypeToDocuments", fields: [livestock_type_id], references: [id])
  MachineTypes   MachineTypes?   @relation("MachineTypeToDocuments", fields: [machine_type_id], references: [id])
  Crops          Crops?          @relation("CropToDocuments", fields: [crop_id], references: [id])
  Livestocks     Livestocks?     @relation("LivestockToDocuments", fields: [livestock_id], references: [id])
  Machines       Machines?       @relation("MachineToDocuments", fields: [machine_id], references: [id])
  Fishs          Fishs?          @relation("FishToDocuments", fields: [fish_id], references: [id])

  @@index([crop_type_id])
  @@index([livestock_type_id])
  @@index([machine_type_id])
  @@index([crop_id])
  @@index([livestock_id])
  @@index([machine_id])
  @@index([fish_id])
}

model Resources {
  id   String       @id @unique @default(uuid())
  type ResourceType

  title       String
  content     String?
  description String?
  author      String?

  resource_url String[]
  image_url    String[]

  filename String?
  size     Int?

  version        String?
  platform       String?
  download_count Int?    @default(0)

  is_active   Boolean   @default(false)
  uploaded_at DateTime? @default(now())
  created_at  DateTime  @default(now())
}
